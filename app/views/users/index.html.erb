<h2 class="sub-header">
  <div class="center">List of Users</div>
</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.first_name %></td>
          <td><%= u.last_name %></td>
          <td>
            <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_user_path(u) %>
            |
            <%= link_to '<i class="fa fa-remove red"></i>'.html_safe, user_path(u), method: :delete, data:{confirm: "Are you sure delete user #{u.full_name}?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>